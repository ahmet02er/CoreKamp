@using EntityLayer.Concrete
@model List<Comment>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@*<td><a href="#"><i class="fa fa-check text-navy"></i></a></td>*@

<div class="row">
    <div class="col-lg-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h5>Yorumlar </h5>
            </div>
            <div class="ibox-content">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Kullanıcı</th>
                            <th>Başlık</th>
                            <th>Blog</th>
                            <th>Puan</th>
                            <th>Tarih</th>
                            <th>Düzenle</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <th>@item.CommentId</th>
                            <td>@item.CommentUserName</td>
                            <td>@item.CommentTitle</td>
                            <td>@item.Blog.BlogTitle</td>
                            <td class="text-navy"> <i class="fa fa-level-up"></i> @item.BlogScore </td>
                            <td> @(((DateTime)item.CommentCreateDate).ToString("dd MMMM yyyy"))</td>
                            <td><a href="#" class="btn btn-outline-success"> Güncelle</a> </td>
                            <td><a href="#" class="btn btn-outline-danger"> Sil</a> </td>
                        </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
