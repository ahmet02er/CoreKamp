@using EntityLayer.Concrete
@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h5>Roller </h5>
            </div>
            <div class="ibox-content">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Düzenle</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>@item.Id</th>
                                <td>@item.Name</td>
                                <td><a href="/Admin/AdminRole/UpdateRole/@item.Id" class="btn btn-outline-success"> Güncelle</a> </td>
                                <td><a href="/Admin/AdminRole/DeleteRole/@item.Id" class="btn btn-outline-danger"> Sil</a> </td>
                            </tr>
                        }

                    </tbody>
                </table>
                <a href="/Admin/AdminRole/AddRole/" class="btn btn-outline-primary">Yeni Rol Ekle</a>
                <a href="/Admin/AdminRole/UserRoleList/" class="btn btn-outline-success">Kullanıcı Rol Listesi</a>
            </div>
        </div>
    </div>
</div>

