@using CoreKamp.Areas.Admin.Models
@model RoleUpdateModel

@{
    ViewData["Title"] = "UpdateRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Rol Güncelleme Sayfası</h1>

<form method="post">
    <div class="form-group">
        <label>Rol ID</label>
        <input type="text" name="Id" value="@Model.Id" class="form-control" />
    </div>
    <div class="form-group">
        <label>Rol Başlığı</label>
        <input type="text" name="Name" value="@Model.Name" class="form-control" />
    </div>
    <button class="btn btn-info">Güncelle</button>
</form>