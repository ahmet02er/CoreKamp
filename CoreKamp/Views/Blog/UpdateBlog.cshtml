@model EntityLayer.Concrete.Blog
@{
    ViewData["Title"] = "UpdateBlog";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h1>Blog Güncelleme Sayfası</h1>

@using (Html.BeginForm("UpdateBlog", "Blog", FormMethod.Post))
{
    @Html.Label("Blog Id")
    @Html.TextAreaFor(x => x.BlogId, new { @class = "form-control" })
    <br />
    @Html.Label("Blog Başlığı")
    @Html.TextAreaFor(x => x.BlogTitle, new { @class = "form-control" })
    <br />
    @Html.Label("Blog İçeriği")
    @Html.TextAreaFor(x => x.BlogContent, 10, 5, new { @class = "form-control" })
    <br />
    @Html.Label("Blog Küçük Resim")
    @Html.TextAreaFor(x => x.BlogThumbnailImage, new { @class = "form-control" })
    <br />
    @Html.Label("Blog Görseli")
    @Html.TextAreaFor(x => x.BlogImage, new { @class = "form-control" })
    <br />
    @Html.Label("Blog Kategori")
    @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.category, new { @class = "form-control" })
    <br />
    <br />
    <button class="btn btn-info">Güncelle</button>
}

