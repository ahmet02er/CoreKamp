@model EntityLayer.Concrete.NewMessage
@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h1>Mesaj Detay Sayfası</h1>

@Html.HiddenFor(x => x.MessageId)
<br />
@Html.Label("Mesaj Başlığı")
@Html.TextBoxFor(x => x.MessageSubject, new { @class = "form-control", disabled = "disabled" })
<br />
@Html.Label("Mesaj Detayı")
@Html.TextAreaFor(x => x.MessageDetails,10,3, new { @class = "form-control", disabled = "disabled", @id = "summernote"  })
<br />

<button class="btn btn-info">Geri Dön</button>