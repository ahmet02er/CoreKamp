@model EntityLayer.Concrete.Writer
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Yazar Kayıt Sayfası</h3>

        <div class="inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                @using (Html.BeginForm("Index", "Register", FormMethod.Post))
                {
                    <div class="form-row">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom01">Ad Soyad</label>
                            @Html.TextAreaFor(x => x.WriterName, new { @class = "form-control", placeholder = "Ad Soyad" })
                            @Html.ValidationMessageFor(x => x.WriterName, "", new { @class = "text-danger" })
                            @*<input type="text" class="form-control" name="WriterName" id="validationDefault01" placeholder="" required="">*@
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom02">E-Posta</label>
                            @Html.TextAreaFor(x => x.WriterMail, new { @class = "form-control", placeholder = "E-Posta" })
                            @Html.ValidationMessageFor(x => x.WriterMail, "", new { @class = "text-danger" })
                            @*<input type="email" class="form-control" name="WriterMail" id="validationDefault02" placeholder="" required="">*@
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword1 mb-2">Şifre</label>
                            @Html.TextAreaFor(x => x.WriterPassword, new { @class = "form-control", placeholder = "Şifre" })
                            @Html.ValidationMessageFor(x => x.WriterPassword, "", new { @class = "text-danger" })
                            @*<input type="password" class="form-control" name="WriterPassword" id="password1" placeholder="" required="">*@
                        </div>
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword1 mb-2">Şifre Tekrar</label>
                            @Html.TextAreaFor(x => x.WriterPasswordConfirm, new { @class = "form-control", placeholder = "Şifre Tekrar" })
                            @Html.ValidationMessageFor(x => x.WriterPasswordConfirm, "", new { @class = "text-danger" })
                            @*<input type="password" class="form-control" name="WriterPassword" id="password1" placeholder="" required="">*@
                        </div>
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword2 mb-2">Görsel Yolu</label>
                            @Html.TextAreaFor(x => x.WriterImage, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.WriterImage, "", new { @class = "text-danger" })
                            @*<input type="text" class="form-control" name="WriterImage" id="password2" placeholder="" required="">*@
                        </div>

                    </div>
                    @await Component.InvokeAsync("CityList")
                    <br /><br />
                    <button type="submit" class="btn btn-primary submit mb-4">Kayıt Ol</button>
                    <p>
                        <a href="#" id="btn">Tüm şartları okudum, kabul ediyorum.</a>
                    </p>

                }

            </div>
        </div>
    </div>
    <br />
    <script>
        $('#btn').click(function () {
            swal("Site Kullanım Sözleşmesi", "Web site şartlarını kabul ediyorum.");
        });
    </script>
</section>
