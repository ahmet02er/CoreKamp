@model UserSignUpViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>AO Core 5.0 | Register</title>

    <link href="~/adminPanel/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/adminPanel/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/adminPanel/css/plugins/iCheck/custom.css" rel="stylesheet">
    <link href="~/adminPanel/css/animate.css" rel="stylesheet">
    <link href="~/adminPanel/css/style.css" rel="stylesheet">

</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen   animated fadeInDown">
        <div>
            <div>

                <h3 class="logo-name">A.Ö.</h3>

            </div>
            <h3>KAYIT EKRANI</h3>
            <p>Yeni Hesap Oluşturma</p>
            <form class="m-t" role="form" asp-action="Index">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <span asp-validation-for="@Model.NameSurname" class="text-danger"></span>
                    <input type="text" asp-for="@Model.NameSurname" class="form-control" placeholder="Ad Soyad" required="">
                </div>
                <div class="form-group">
                    <span asp-validation-for="@Model.Mail" class="text-danger"></span>
                    <input type="email" asp-for="@Model.Mail" class="form-control" placeholder="Email" required="">
                </div>
                <div class="form-group">
                    <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                    <input type="text" asp-for="@Model.UserName" class="form-control" placeholder="Kullanıcı Adı" >
                </div>
                <div class="form-group">
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                    <input type="password" asp-for="@Model.Password" class="form-control" placeholder="Parola" required="">
                </div>
                <div class="form-group">
                    <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                    <input type="password" asp-for="@Model.ConfirmPassword" class="form-control" placeholder="Parola Tekrar" required="">
                </div>
                <div class="form-group">
                    <span asp-validation-for="@Model.IsAcceptTheContract" class="text-danger"></span>
                    <div class="checkbox i-checks">
                        <label>
                            <input type="checkbox" asp-for="IsAcceptTheContract">
                            <i></i> Kullanım Şartlarını Okudum. Kabul Ediyorum.
                        </label>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary block full-width m-b">Kayıt Ol</button>

                <p class="text-muted text-center"><small><a class="btn btn-sm btn-white btn-block" href="/Login/Index/">Kayıtlı Bir Hesabım Var</a></small></p>

            </form>
            <p class="m-t"> <small>Asp.Net Core 5.0 &copy; @DateTime.Now.Year</small> </p>
        </div>
    </div>

    <!-- Mainly scripts -->
    <script src="~/adminPanel/js/jquery-3.1.1.min.js"></script>
    <script src="~/adminPanel/js/popper.min.js"></script>
    <script src="~/adminPanel/js/bootstrap.js"></script>
    <!-- iCheck -->
    <script src="~/adminPanel/js/plugins/iCheck/icheck.min.js"></script>
    <script>$(document).ready(function(){
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });</script>
</body>

</html>
