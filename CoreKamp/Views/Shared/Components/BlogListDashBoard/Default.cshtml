@using EntityLayer.Concrete
@model List<Blog>
@{ string color = "";}
<div class="col-12 grid-margin">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Son 10 Blog</h4>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th> # </th>
                            <th> Başlık </th>
                            <th> Kategori </th>
                            <th> Tarih </th>
                            <th> Detaylar </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (item.Category.CategoryName == "Eğitim")
                            {
                                color = "badge badge-success";
                            }
                            if (item.Category.CategoryName == "Tiyatro")
                            {
                                color = "badge badge-secondary";
                            }
                            if (item.Category.CategoryName == "Kitap")
                            {
                                color = "badge badge-success";
                            }
                            if (item.Category.CategoryName == "Oyun")
                            {
                                color = "badge badge-danger";
                            }
                            if (item.Category.CategoryName == "Film")
                            {
                                color = "badge badge-warning";
                            }
                            if (item.Category.CategoryName == "Dizi")
                            {
                                color = "badge badge-dark";
                            }
                            if (item.Category.CategoryName == "Teknoloji")
                            {
                                color = "badge badge-primary";
                            }
                            if (item.Category.CategoryName == "Sinema")
                            {
                                color = "badge badge-danger";
                            }
                            if (item.Category.CategoryName == "Yazılım")
                            {
                                color = "badge badge-info";
                            }
                            <tr>
                                <td>@item.BlogId</td>
                                <td>
                                    <img src="@item.BlogThumbnailImage" class="mr-2" alt="image">
                                    @item.BlogTitle
                                </td>
                                <td>
                                    <label class="@color">@item.Category.CategoryName</label>
                                </td>
                                <td>  @(((DateTime)item.BlogCreateDate).ToString("dd MMMM yyyy")) </td>
                                <td>  <a href="/Blog/BlogReadAll/@item.BlogId" class="btn btn-sm btn-dark">Görüntüle</a></td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
