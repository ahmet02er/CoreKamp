@{
    Layout = null;
}



<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Asp.Net Core 5.0</title>
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback" rel="stylesheet" />

    <link href="~/writerPanel/assets/vendors/mdi/css/materialdesignicons.min.css" rel="stylesheet" />
    <link href="~/writerPanel/assets/vendors/css/vendor.bundle.base.css" rel="stylesheet" />
    <link href="~/writerPanel/assets/css/style.css" rel="stylesheet" />
    <link href="~/writerPanel/assets/images/favicon.ico" rel="shortcut icon" />
    <link href="~/writerPanel/assets/css/SweetAlert2.css" rel="stylesheet" />
    <link href="~/summernote/summernote.min.css" rel="stylesheet" />
    <link href="~/summernote/summernote-bs4.min.css" rel="stylesheet" />



</head>
<body>
    <div class="container-scroller">
        <nav class="navbar default-layout-navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
            <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center">
                <a class="navbar-brand brand-logo" href="../../index.html"><img src="~/writerPanel/assets/images/ahmetlogo0.png" alt="logo" /></a>
                <a class="navbar-brand brand-logo-mini" href="../../index.html"><img src="~/writerPanel/assets/images/ahmetlogo0.png" alt="logo" /></a>
            </div>
            <div class="navbar-menu-wrapper d-flex align-items-stretch">
                <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
                    <span class="mdi mdi-menu"></span>
                </button>
                <div class="search-field d-none d-md-block">
                    <form class="d-flex align-items-center h-100" action="#">
                        <div class="input-group">
                            <div class="input-group-prepend bg-transparent">
                                <i class="input-group-text border-0 mdi mdi-magnify"></i>
                            </div>
                            <input type="text" class="form-control bg-transparent border-0" placeholder="Site İçi Arama Alanı...">
                        </div>
                    </form>
                </div>
                <ul class="navbar-nav navbar-nav-right">
                    <li class="nav-item nav-profile">
                        <a class="nav-link" id="profileDropdown" href="#" data-toggle="dropdown" aria-expanded="false">
                            <div class="nav-profile-img">
                                <img src="~/writerPanel/assets/images/ahmetlogo.png" alt="image">
                                <span class="availability-status online"></span>
                            </div>
                            @await Component.InvokeAsync("WriterName")
                        </a>
                    </li>
                    <li class="nav-item d-none d-lg-block full-screen-link">
                        <a class="nav-link">
                            <i class="mdi mdi-fullscreen" id="fullscreen-button"></i>
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link count-indicator dropdown-toggle" id="messageDropdown" href="#" data-toggle="dropdown" aria-expanded="false">
                            <i class="mdi mdi-email-outline"></i>
                            <span class="count-symbol bg-warning"></span>
                        </a>
                        @await Component.InvokeAsync("WriterMessageNotification")
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link count-indicator dropdown-toggle" id="notificationDropdown" href="#" data-toggle="dropdown">
                            <i class="mdi mdi-bell-outline"></i>
                            <span class="count-symbol bg-danger"></span>
                        </a>
                        @await Component.InvokeAsync("WriterNotification")
                    </li>
                    <li class="nav-item nav-logout d-none d-lg-block">
                        <a class="nav-link" href="/Login/LogOut/">
                            <i class="mdi mdi-power"></i>
                        </a>
                    </li>
                </ul>
                <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
                    <span class="mdi mdi-menu"></span>
                </button>
            </div>
        </nav>
        <div class="container-fluid page-body-wrapper">
            @await Html.PartialAsync("~/Views/Writer/WriterNavbarPartial.cshtml")
            <div class="main-panel">
                <div class="content-wrapper">
                    @RenderBody()
                </div>
                @await Html.PartialAsync("~/Views/Writer/WriterFooterPartial.cshtml")
            </div>
        </div>
    </div>



    <script src="/writerPanel/assets/vendors/js/vendor.bundle.base.js"></script>
    <script src="/writerPanel/assets/vendors/chart.js/Chart.min.js"></script>
    <script src="/writerPanel/assets/js/off-canvas.js"></script>
    <script src="/writerPanel/assets/js/hoverable-collapse.js"></script>
    <script src="/writerPanel/assets/js/misc.js"></script>
    <script src="/writerPanel/assets/js/dashboard.js"></script>
    <script src="/writerPanel/assets/js/todolist.js"></script>
    <script src="/writerPanel/assets/js/SweetAlert2.js"></script>
    <script src="/summernote/summernote.min.js"></script>
    <script src="/summernote/summernote-bs4.min.js"></script>
    <script src="/summernote/lang/summernote-tr-TR.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#summernote').summernote({
                height: 200,
                lang: 'tr-TR' // default: 'en-US'
            });
        });

        $('.Sil').click(function (e) {
            e.preventDefault();
            var linkURL = $(this).attr("href");
            Swal.fire({
                title: 'UYARI!',
                text: "Blog yazısını silmek istediğinize emin misiniz?",
                icon: 'warning',
                showCancelButton: true,
                showCancelButton: true,
                confirmButtonColor: '#5CBA6C',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Evet',
                cancelButtonText: 'Hayır'
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire(
                        'Başarılı!',
                        'Seçilen Blog Silindi .',
                        'success'
                    )
                    window.location.href = linkURL;
                }
                else if (result.dismiss === Swal.DismissReason.cancel) {

                }
            })

        });
    </script>
</body>
</html>
