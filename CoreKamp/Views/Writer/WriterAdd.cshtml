@model CoreKamp.Models.AddProfileImage
@{
    ViewData["Title"] = "WriterAdd";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<form class="form-group" method="post" enctype="multipart/form-data">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yazar Profil Bilgileri Düzenleme</h4>
                <br />
                @Html.HiddenFor(x => x.WriterId, new { @class = "form-control" })

                <div class="forms-sample">
                    <div class="form-group">
                        <label for="exampleInputName1">Yazar Ad Soyad</label>
                        @Html.TextBoxFor(x => x.WriterName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.WriterName)
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">E-Posta Adresi</label>
                        @Html.TextBoxFor(x => x.WriterMail, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.WriterMail)
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Şifre</label>
                        @Html.TextBoxFor(x => x.WriterPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.WriterPassword)

                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Şifre Tekrar</label>
                        @Html.TextBoxFor(x => x.WriterPasswordConfirm, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.WriterPasswordConfirm)

                    </div>
                    <div class="form-group">
                        <label>Profil Resmi</label>
                        <input type="file" name="WriterImage" />
                        @Html.ValidationMessageFor(x => x.WriterImage)
                    </div>
                    <div class="form-group">
                        <label for="exampleTextarea1">Yazar Hakkında</label>
                        @Html.TextAreaFor(x => x.WriterAbout, 15, 3, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.WriterAbout)
                    </div>
                    <button type="submit" class="btn btn-gradient-primary mr-2">Kaydet</button>
                    <button class="btn btn-light">Yazgeç</button>
                </div>
            </div>
        </div>
    </div>
</form>

